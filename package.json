{
  "name": "lms-server",
  "version": "1.0.0",
  "description": "Production-ready Express.js server for LMS Platform",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r public dist/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t lms-server .",
    "docker:run": "docker run -p 5000:5000 lms-server",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "render:build": "npm run prisma:generate && npm run build",
    "render:start": "npm run prisma:deploy && npm run start:prod"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "lms",
    "production",
    "docker",
    "prisma"
  ],
  "author": "LMS Team",
  "license": "MIT",
  "dependencies": {
    "@clerk/backend": "^2.9.4",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "prisma": "^6.14.0",
    "razorpay": "^2.9.6",
    "svix": "^1.74.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "@/config": "dist/config",
    "@/controllers": "dist/controllers",
    "@/middleware": "dist/middleware",
    "@/services": "dist/services",
    "@/repositories": "dist/repositories",
    "@/routes": "dist/routes",
    "@/utils": "dist/utils",
    "@/types": "dist/types",
    "@/interfaces": "dist/interfaces",
    "@/dto": "dist/dto",
    "@/env": "dist/env"
  }
}
