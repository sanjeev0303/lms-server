# ==============================================
# LMS Server Environment Configuration (Render Production)
# ==============================================
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=10000
NODE_ENV=production

# Render Configuration (automatically set by Render)
RENDER=true
# RENDER_EXTERNAL_URL will be automatically set by Render

# Database Configuration
# Use your Neon database URL or Render PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Clerk Authentication (Required)
CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret

# JWT Configuration (Required)
JWT_SECRET=your_super_secure_jwt_secret_for_production
JWT_EXPIRES_IN=7d

# Client Configuration
CLIENT_URL=https://your-client-app.onrender.com

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Payment Configuration (Razorpay)
RAZORPAY_KEY_ID=rzp_live_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# File Upload Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
